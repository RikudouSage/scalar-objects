{
  "name": "rikudou/scalar-objects",
  "type": "library",
  "description": "Handlers for using scalar types as objects",
  "homepage": "https://github.com/RikudouSage/scalar-objects",
  "keywords": [
    "scalar",
    "objects"
  ],
  "license": "WTFPL",
  "authors": [
    {
      "name": "Dominik Chrástecký",
      "email": "dominik@chrastecky.cz"
    }
  ],
  "require": {
    "php": "^7.1",
    "ext-scalar_objects": ">=0.2",
    "ext-mbstring": "*"
  },
  "autoload": {
    "files": [
      "src/register_handlers.php"
    ],
    "psr-4": {
      "Rikudou\\ScalarObjects\\": "src/"
    }
  },
  "require-dev": {
    "rikudou/reflection-file": "^1.2.3",
    "friendsofphp/php-cs-fixer": "^2.15"
  },
  "scripts": {
    "fixer": "php-cs-fixer fix --verbose"
  }
}
